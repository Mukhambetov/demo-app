{
  "env": {
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "mocha"
  ],
  "rules": {
    "camelcase": "warn",
    "mocha/no-skipped-tests": "warn",
    "mocha/no-exclusive-tests": "warn",
    "mocha/no-identical-title": "error",
    "mocha/no-global-tests": "error",
    "mocha/max-top-level-suites": ["warn", { "limit": 1 }]
  }
}
